---
import { getCollection, render } from 'astro:content';
import Base from '../../layouts/Base.astro';

export async function getStaticPaths() {
  const tools = await getCollection('tools');
  return tools.map((tool) => ({
    params: { slug: tool.id },
    props: { tool },
  }));
}

const { tool } = Astro.props;
const { Content } = await render(tool);
---

<Base title={tool.data.name} description={tool.data.description}>
  <a href="/" class="back">&larr; All tools</a>

  <h1>{tool.data.name}</h1>
  <p class="description">{tool.data.description}</p>

  {tool.data.platform && (
    <p class="meta"><strong>Platform:</strong> {tool.data.platform}</p>
  )}

  {tool.data.requirements && tool.data.requirements.length > 0 && (
    <div class="requirements">
      <strong>Requirements:</strong>
      <ul>
        {tool.data.requirements.map((req) => (
          <li>{req}</li>
        ))}
      </ul>
    </div>
  )}

  <div class="content">
    <Content />
  </div>

  <div class="repo-link">
    <a href={tool.data.repo} target="_blank" rel="noopener noreferrer">
      View on GitHub &rarr;
    </a>
  </div>
</Base>

<style>
  .back {
    display: inline-block;
    margin-bottom: 1.5rem;
    font-size: 0.875rem;
    color: var(--text-muted);
  }

  .back:hover {
    color: var(--accent);
  }

  .description {
    font-size: 1.1rem;
    color: var(--text-muted);
    margin-bottom: 1.5rem;
  }

  .meta {
    font-size: 0.875rem;
    margin-bottom: 0.5rem;
  }

  .requirements {
    font-size: 0.875rem;
    margin-bottom: 1.5rem;
  }

  .requirements ul {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }

  .content {
    margin-top: 2rem;
  }

  .repo-link {
    margin-top: 3rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border);
  }

  .repo-link a {
    font-weight: 500;
  }
</style>
